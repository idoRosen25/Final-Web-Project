<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
  <%- include('./partials/head') %>
</head>

<body>
  <div class="container-fluid overflow-hidden text-center bg-secondary">
    <div class="row">
      <div class="col-12">
        <%- include('./partials/header'); %>
      </div>
    </div>
    <div class="row mt-3">
      <!-- checkout -->
      <div class="m-auto col-8 mt-3 mb-3">
        <h1>Orders View</h1>
      </div>

      <div class="row mb-3">
        <div class="m-auto col-8">
          <a href="/orders" class="btn btn-primary">Back To Orders</a>
          <div class="mt-3">
            Order Date: <%=new Intl.DateTimeFormat('en-US').format(order.date)%>
          </div>
        </div>
      </div>
      <div class="m-auto col-lg-6 col-md-18 col-10 min-h-40 mb-5">
        <div class="p-3 card bg-dark text-dark rounded">
          <div class="table">
            <table class="table table-dark table-striped">
              <thead>
                <tr>
                  <th scope="col">Image</th>
                  <th scope="col">Title</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total Price</th>
                </tr>
              </thead>
              <tbody>
                <% for (var i=0; i <=order.products.length-1;i++) { %>
                  <tr id="<%= order.products[i].product._id %>">
                    <!--Banana-->
                    <td>
                      <img src="<%= order.products[i].product.image %>" class="rounded mx-auto d-block" alt="Banana"
                        style="height: 100px; width: 100px" />
                    </td>
                    <td>
                      <div class="mt-4 capitalize">
                        <%= order.products[i].product.title%>
                      </div>
                    </td>
                    <td>
                      <div class="mt-4">
                        <%= order.products[i].quantity%>
                      </div>
                    </td>
                    <td>
                      <div class="mt-4 capitalize">
                        <%= order.products[i].product.price * order.products[i].quantity %> $
                      </div>
                    </td>
                  </tr>
                  <%}%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer'); %>
  </div>
</body>

</html>