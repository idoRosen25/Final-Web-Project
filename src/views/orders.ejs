<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <%- include('./partials/head') %>
  </head>

  <body>
    <div class="container-fluid overflow-hidden text-center bg-secondary">
      <div class="row">
        <div class="col-12"><%- include('./partials/header'); %></div>
      </div>
      <div class="row mt-3">
        <!-- checkout -->
        <div class="m-auto col-8 mt-3 mb-3">
          <h1>Orders</h1>
        </div>

        <div class="m-auto col-lg-6 col-md-18 col-10 min-h-40 mb-5">
          <div class="p-3 card bg-dark text-dark">
            <div class="table">
              <table class="table table-dark table-striped">
                <thead>
                  <tr>
                    <th scope="col">Amount of Products</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Show</th>
                  </tr>
                </thead>
                <tbody>
                  <% for( let i = 0; i < orderList.length; i++ ) { %>
                  <tr>
                    <td scope="col"><%=orderList[i].products.length%></td>
                    <td scope="col">
                      <%=new
                      Intl.DateTimeFormat('en-US').format(orderList[i].date)%>
                    </td>
                    <td scope="col"><%=orderList[i].totalPrice%>$</td>
                    <td scope="col">
                      <a
                        href="/orders/<%=orderList[i]._id%>"
                        class="btn btn-primary"
                        >Show</a
                      >
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <%- include('./partials/footer'); %>
    </div>
  </body>
</html>
