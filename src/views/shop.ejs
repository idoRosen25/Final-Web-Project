<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
  <%- include('./partials/head') %>
</head>

<body>
  <div class="container-fluid overflow-hidden text-center bg-secondary">
    <div class="row">
      <div class="col-12">
        <%- include('./partials/header'); %>
      </div>
    </div>
    <div class="row mt-3 mb-5">
      <!-- checkout -->
      <div class="m-auto col-8 mt-3 mb-5">
        <h1>Products</h1>
      </div>

      <div class="m-auto col-lg-10 col-md-11 col-12 min-h-40">
        <div class="p-3 bg-dark text-dark rounded">
          <div class="rounded text-light">
            <ul style="list-style:none; display: flex;justify-content: space-around;">
              <li>
                <label for="priceRange" class="form-label">Max Price</label>
                <input type="range" class="form-range" min="0" max="1000" step="50" id="priceRange"
                  data-slider-id="rangeSlider" data-slider-min="0" data-slider-max="12" data-slider-step="1"
                  data-slider-value="14">
              </li>
              <li>Name</li>
              <li>Reset</li>
            </ul>
          </div>
          <ul class="nav nav-tabs">
            <% for( let i=0; i < categories.length; i++ ) { %>
              <li id="<%=categories[i]._id %>" class="nav-item">
                <a id="<%=categories[i]._id%>" class="nav-link category-tab capitalize <%=categories[i].title%>">
                  <%=categories[i].title%>
                </a>
              </li>
              <% } %>
          </ul>
          <div id="productContainer" class="row pt-2">

          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer'); %>
  </div>

  <script src="../public/js/products.js"></script>
</body>

</html>