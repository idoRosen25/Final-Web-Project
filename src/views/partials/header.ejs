<link rel="stylesheet" href="../../public/css/header.css" />
<div class="row">
  <nav class="navbar navbar-expand-md navbar-dark bg-black d-flex">
    <div class="container-fluid col-10 col-md-11 col-lg-9 m-auto">
      <a class="navbar-brand" href="/">
        <h1>FreshCart Shop</h1>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#headerNavbar"
        aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle navigation" style="max-width: 75px">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="headerNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact</a>
          </li>
        </ul>

        <ul class="navbar-nav col-9 justify-content-end gap-md-4">
          <% if(username){%>
            <!-- Add shopping cart and whishlish icon-->
            <li class="nav-item">
              <a class="nav-link d-block d-md-none" href="/cart">Cart</a>
              <a href="/cart" class="text-muted position-relative d-none d-md-block">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none"
                  stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="feather feather-shopping-bag bordered-icon">
                  <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                  <line x1="3" y1="6" x2="21" y2="6"></line>
                  <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link d-block d-md-none" href="/wishlist">Wishlist</a>
              <a href="/wishlist" class="text-muted position-relative d-none d-md-block">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none"
                  stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="feather feather-heart bordered-icon">
                  <path
                    d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z">
                  </path>
                </svg>
              </a>
            </li>
            <li class="nav-item" style="text-decoration-color: white">
              <span id="accountIcon" href="/account" class="text-muted d-none d-md-block" data-bs-toggle="tooltip"
                data-bs-placement="bottom" data-bs-html="true" title="<b>this is bold tooltip</b>"
                onclick="toggleTooltip()" style="cursor: pointer">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none"
                  stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                  class="feather feather-user bordered-icon">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
              </span>

              <table id="tooltip" class="table d-none text-center">
                <tbody id="tooltip-body">
                  <tr>
                    <td><a href="/user"> Account </a></td>
                  </tr>
                  <tr>
                    <td><a href="/orders">Orders</a></td>
                  </tr>
                  <tr>
                    <td><span class="logoutUser link">Logout</span></td>
                  </tr>
                </tbody>
              </table>

              <a href="/user" class="nav-link d-block d-md-none"> My Account </a>
              <a href="/orders" class="nav-link d-block d-md-none"> My Orders </a>
              <span class="nav-link d-block d-md-none logoutUser link">
                Logout
              </span>
            </li>
            <%}else{%>
              <li class="nav-item" style="text-decoration-color: white">
                <a href="/" class="text-muted d-none d-md-block" data-bs-toggle="modal" data-bs-target="#userModal">
                  <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none"
                    stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="feather feather-user" style="
                  border: 1px solid white;
                  padding: 0.6rem;
                  border-radius: 25px;
                ">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                  </svg>
                </a>
                <a href="/" class="nav-link d-block d-md-none" data-bs-toggle="modal" data-bs-target="#userModal">
                  Login
                </a>
              </li>
              <%}%>
        </ul>
      </div>

      <div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content p-4">
            <div class="modal-header border-0">
              <h5 class="modal-title fs-3 fw-bold" id="userModalLabel">
                Sign In
              </h5>

              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/user/login" id="loginForm">
                <div class="form-floating mb-3">
                  <input name="email" type="email" class="form-control" id="email" placeholder="Enter Email address"
                    required />
                  <label for="email" class="form-label">Email address</label>
                </div>

                <div class="form-floating mb-3">
                  <input name="password" type="password" class="form-control" id="password" placeholder="Enter Password"
                    required />
                  <label for="password" class="form-label">Password</label>
                </div>
                <div id="loginError" class="mt-0 align-items-center">
                  Username/Password incorrect. Try again or signup
                </div>
                <input id="loginSubmitBtn" type="submit" class="btn btn-primary mt-3" value="Sign In" />
              </form>
            </div>
            <div class="modal-footer border-0 justify-content-center">
              Don't have an account yet?<a href="/signup" class="btn btn-link">Sign Up</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>