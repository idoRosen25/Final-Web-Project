<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head')%>
</head>

<body>
    <div class="container-fluid overflow-hidden text-center bg-secondary">
        <div class="row">
            <div class="col-12">
                <%- include('./partials/header'); %>
            </div>
        </div>


        <div class="row gy-5 mt-3">
            <div class="col-2"></div>
            <div class="col-8">
                <h2>Wish List</h2>
            </div>
            <div class="col-2"></div>
            <div class="col-2">
            </div>
            <div class="col-lg-8 col-md-10 col-12">
                <div class="p-3 card bg-dark text-dark flex-grow">

                    <div class="table">
                        <table class="table table-dark table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Image</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Category</th>
                                    <th scope="col"></th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (var i=0; i <=items.length-1;i++) { %>
                                    <tr>
                                        <!--Banana-->
                                        <td><img src="<%= items[i].image %>" class="rounded mx-auto d-block"
                                                alt="Banana" style="height:100px; width:100px;"></td>
                                        <td>
                                            <div class="mt-4">
                                                <%= items[i].title%>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="mt-4">
                                                <%= items[i].price%>$
                                            </div>
                                        </td>
                                        <td>
                                            <div class="mt-4">
                                                <%= items[i].category%>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="mt-4"><button type="button" class="btn btn-success"
                                                    onclick="addItemToCart(items[i]._id)">Add</button>
                                            </div>
                                        </td>
                                        <td><button type="button" class="btn btn-danger mt-4"
                                                onclick="removeItemFromList(items[i]._id)"><svg
                                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                                    fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                    <path
                                                        d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
                                                </svg></button></td>
                                    </tr>
                            </tbody>
                        </table>
                    </div>
                    <%}%>
                </div>
            </div>
            <div class="col-2">
                <div class="p-3"></div>
            </div>
        </div>




    </div>


</body>

</html>


